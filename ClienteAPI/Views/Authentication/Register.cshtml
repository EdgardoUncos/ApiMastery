@{
    ViewData["Title"] = "Register";
}
@model ClienteAPI.DTOs.UserRegistrationRequestDto


<h1>Registrate</h1>

<div class="card">
    <div class="card-body">
        <form asp-action="Registro">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label as="EmailAddress" class="form-label"></label>
                <input asp-for="EmailAddress" class="form-control" autocomplete="off" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button class="btn btn-primary">Registrate</button>
            <a class="btn btn-success" asp-action="Registro">Deseo Registrarme</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
