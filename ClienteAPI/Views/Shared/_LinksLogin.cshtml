@{
    var email = Context.Session.GetString("email");
    var token = Context.Session.GetString("token");
}

<ul class="navbar-nav">

    @if (!string.IsNullOrEmpty(email) && !string.IsNullOrEmpty(token))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Hola, @email</span>
        </li>
        <li>
            <form class="form-inline" asp-controller="Authentication" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link dark-text" asp-controller="Authentication" asp-action="Register">
                Registro
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link dark-text" asp-controller="Authentication" asp-action="Login">
                Login
            </a>
        </li>
    }
</ul> 